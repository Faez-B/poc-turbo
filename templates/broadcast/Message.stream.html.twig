{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
    <turbo-stream action="append" target="messages">
        <template>
            {% include "chat/_message.html.twig" with { message: entity } %}
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="replace" target="message_{{ id }}">
        <template>
            {% include "chat/_message.html.twig" with { message: entity } %}
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" target="message_{{ id }}"></turbo-stream>
{% endblock %}
